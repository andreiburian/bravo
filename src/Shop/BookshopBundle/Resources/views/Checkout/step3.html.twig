{% extends 'ShopBookshopBundle::productpage_layout.html.twig' %}
{% block title %}Shipping Method{% endblock%}
{% block content %} 
<div class="page-title">
    <h1>Shipping Method</h1>
</div>
<ol class="opc" id="checkoutSteps">
    <li id="opc-shipping_method" class="section slide4 allow active">
        <div class="step-title">
            <span class="number">3</span>
            <h2>Shipping Method</h2>
            <a href="#">Edit</a>
        </div>
        <div id="checkout-step-shipping_method" class="step a-item">
            <form id="co-shipping-method-form" action="{{path('shop_bookshop_checkoutStep3')}}" method="POST">
                <fieldset>
                    <dl class="sp-methods" id="checkout-payment-method-load">
                        {% for child in form.shippingMethod %}
                        <dt>
                        {{ form_widget(child) }}
                        {{ form_label(child) }}
                        </dt>
                        {% endfor %}
                        {{form_rest(form)}}
                    </dl>
                </fieldset>
            <div class="buttons-set" id="payment-buttons-container">
                <p class="required">* Required Fields</p>
                <p class="back-link"><a href="javascript: window.location = '{{path('shop_bookshop_checkoutStep2')}}';" ><small>Â« </small>Back</a></p>
                <button type="submit" class="button"><span><span>Continue</span></span></button>
            </div>
            </form>
        </div>
    </li>
</ol>
{% block rightSidebar %}{% endblock %}
{% endblock %}