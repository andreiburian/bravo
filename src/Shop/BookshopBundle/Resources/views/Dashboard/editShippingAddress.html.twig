{% extends 'ShopBookshopBundle::dashboard_layout.html.twig' %}
{% block title %}Shipping Address{% endblock%}
{% block content %} 
<div class="page-title">
    <h1>Dashboard</h1>
</div>
<ol class="opc" id="checkoutSteps">
    <li id="opc-shipping" class="section slide3 allow active">
        <div class="step-title">
            <h2>Shipping Information</h2>
        </div>
        <div id="checkout-step-shipping" class="step a-item">
            <form id="co-shipping-form" action="{{path('shop_bookshop_dashboardEditShippingAddress')}}" method="POST">
                <ul class="form-list">
                        <li id="shipping-new-address-form">
                            <fieldset>
                                <input name="shipping[address_id]" value="" id="shipping:address_id" type="hidden">
                                <ul>
                                    <li class="fields">
                                        <div class="customer-name">
                                            <div class="field name-firstname">
                                                <label for="shipping:firstname" class="required"><em>*</em>First Name</label>
                                                <div class="input-box">
                                                    {{ form_widget(form.firstname, {'attr': {'class': 'input-text required-entry'} }) }}
                                                </div>
                                            </div>
                                            <div class="field name-lastname">
                                                <label for="shipping:lastname" class="required"><em>*</em>Last Name</label>
                                                <div class="input-box">
                                                    {{ form_widget(form.lastname, { 'attr': {'class': 'input-text required-entry'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="fields">
                                        <div class="field">
                                            <label for="shipping:email" class="required"><em>*</em>Email Address</label>
                                            <div class="input-box">
                                                {{ form_widget(form.email, { 'attr': {'class': 'input-text required-entry'} }) }}
                                            </div>
                                        </div>
                                    </li>
                                    <li class="wide">
                                        <label for="shipping:street1" class="required"><em>*</em>Address</label>
                                        <div class="input-box">
                                            {{ form_widget(form.addressDetail, { 'attr': {'class': 'input-text required-entry'} }) }}
                                        </div>
                                    </li>
                                   <li class="fields">
                                        <div class="field">
                                            <label for="shipping:country_id" class="required"><em>*</em>Country</label>
                                            <div class="input-box">
                                            {{ form_widget(form.country, { 'attr': {'class': 'input-text required-entry'} }) }}
                                            </div>    
                                        </div>
                                    </li>
                                    <li class="no-display"><input name="shipping[save_in_address_book]" value="1" type="hidden"></li>
                                </ul>
                            </fieldset>
                        </li>
                </ul>
                {{ form_widget(form._token)  }}    
                <div class="buttons-set" id="shipping-buttons-container">
                    <p class="required">* Required Fields</p>
                    <p class="back-link" ><a href="javascript: history.go(-1)"><small>Â« </small>Back</a></p>
                    <button type="submit" title="Continue" class="button"><span><span>Continue</span></span></button>
                </div>
            </form>
        </div>
    </li>
</ol>
{% endblock %}