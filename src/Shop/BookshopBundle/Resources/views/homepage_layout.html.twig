{% extends '::base.html.twig' %}


{% block container %}

<div class="main-container col3-layout">
    <div class="main">
        <div class="col-wrapper">
            
            <div class="breadcrumbs">
                {% block breadcrumbs %}
                {% endblock %}
            </div>
            <div class="col-main">
                <div class="box best-selling">
                    {% block content %}
                    {% endblock %}
                 </div>
            </div>
               <div class="col-left sidebar">
                      {% block lsidebar %}
                      {% endblock %}
               </div>           
        </div>
        <div class="col-right sidebar">
        {% block rightSidebar %}
        {{ render(controller('ShopBookshopBundle:Cart:cartSidebar')) }}
        {% endblock %}
        </div>
    </div>
</div>

{% endblock %}